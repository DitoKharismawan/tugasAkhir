<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".RevisiDestinasiBag"
    tools:layout_editor_absoluteX="-13dp"
    tools:layout_editor_absoluteY="0dp">


    <TextView
        android:id="@+id/textViewRevisiBag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:gravity="center"
        android:text="Revisi Destinasi BAG"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextRevisiBagNo"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginTop="92dp"
        android:background="@drawable/edit_text_background"
        android:enabled="false"
        android:gravity="center"
        android:hint="Revisi Bag Number"
        android:inputType="none"
        app:layout_constraintBaseline_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextTanggalRevisi"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginTop="140dp"
        android:background="@drawable/edit_text_background"
        android:enabled="false"
        android:gravity="center"
        android:hint="Tanggal"
        android:inputType="none"
        app:layout_constraintBaseline_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextUserRevisi"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginTop="188dp"
        android:background="@drawable/edit_text_background"
        android:enabled="false"
        android:gravity="center"
        android:hint="User"
        android:inputType="none"
        app:layout_constraintBaseline_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/RevisiFacCode"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginTop="508dp"
        android:background="@drawable/edit_text_background"
        android:enabled="false"
        android:gravity="center"
        android:hint="Facility Code"
        android:inputType="none"
        app:layout_constraintBaseline_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/backButton"
        android:layout_width="28dp"
        android:layout_height="30dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="28dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/baseline_arrow_back_ios_24" />

    <Button
        android:id="@+id/buttonCreateRevisiBag"
        android:layout_width="314dp"
        android:layout_height="60dp"

        android:layout_x="26dp"
        android:layout_y="201dp"
        android:text="Create"
        android:textSize="15dp"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.35"
        tools:ignore="TextSizeCheck" />

    <EditText
        android:id="@+id/editTextRemarks"
        android:layout_width="354dp"
        android:layout_height="36dp"
        android:layout_x="16dp"
        android:layout_y="239dp"

        android:ems="10"
        android:hint="Remarks"
        android:inputType="text"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.48"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.624" />

    <TextView
        android:id="@+id/textViewBN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search By BAG NUMBER"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.018"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.449" />

    <EditText
        android:id="@+id/editTextRevisiBag"
        android:layout_width="348dp"
        android:layout_height="54dp"

        android:layout_marginBottom="340dp"
        android:layout_x="6dp"
        android:layout_y="499dp"
        android:ems="10"
        android:inputType="text"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.129"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/scanButtonRevisiBag"
        android:layout_width="32dp"
        android:layout_height="30dp"
        android:layout_marginBottom="160dp"
        android:onClick="onScanButtonClicked"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.904"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.656"
        app:srcCompat="@drawable/baseline_camera_alt_24" />

    <TextView
        android:id="@+id/textViewIncrementTotalBag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="108dp"
        android:layout_marginBottom="60dp"
        android:text="0"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/textViewTotalBag" />

    <TextView
        android:id="@+id/textViewTotalBag"
        android:layout_width="202dp"
        android:layout_height="37dp"
        android:layout_marginBottom="36dp"
        android:text="Total Scan BAG"
        android:textSize="27sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/textViewIncrementTotalBag"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.587"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/approveButtonRevisiBag"
        android:layout_width="171dp"
        android:layout_height="53dp"
        android:layout_marginEnd="92dp"
        android:layout_marginBottom="8dp"
        android:layout_x="222dp"
        android:layout_y="653dp"
        android:text="Approve"
        android:textSize="15sp"
        app:backgroundTint="#4CAF50"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>